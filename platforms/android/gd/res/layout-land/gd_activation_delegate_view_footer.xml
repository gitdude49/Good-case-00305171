<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="@dimen/adv_learnmore_layout_marginBottom"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gd_grey"/>

        <com.good.gd.widget.GDTextView
            android:id="@+id/activationKeyLink"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="@dimen/adv_all_controls_marginLeft"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:autoLink="web"
            android:textColor="@color/gd_light_red"
            android:textSize="@dimen/easy_activation_elements_text_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gd_grey"/>
    </LinearLayout>
</LinearLayout>